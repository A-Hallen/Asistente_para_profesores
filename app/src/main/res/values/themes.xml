<resources>
    <!-- Base application theme. -->
    <style name="Theme.AsistenteDeProfesores" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primero</item>
        <item name="colorPrimaryVariant">@color/segundo</item>
        <item name="colorOnPrimary">@color/tercero</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cuarto</item>
        <item name="colorSecondaryVariant">@color/quinto</item>
        <item name="colorOnSecondary">@color/sexto</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:listDivider">@color/listDivider</item>
    </style>

    <style name="RoundCorner" parent="">
        <item name="background">@drawable/edit_text_bg</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">37.5dp</item>
        <item name="color">@color/white</item>
    </style>

    <style name="MarginEdit" parent="Widget.AppCompat.EditText">
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
        <item name="hintTextColor">@color/soft_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <color name="primary">#FF9800</color>

    <style name="Theme.AsistenteDeProfesores.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.School.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.School.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MaterialCalendar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/biotif_regular</item>
        <item name="colorSecondary">@color/segundo</item>
    </style>

    <style name="TableCells" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
    </style>

    <style name="DrawerItemText" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/tercero</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="noRipple">
        <item name="selectableItemBackground">@null</item>
    </style>

    <style name="FloatingButton" parent="Widget.Design.FloatingActionButton">
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="TimePickerTheme" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="fontFamily">@font/biotif_regular</item>
        <!-- Cambios en el color -->
        <item name="colorAccent">@color/primero</item>
        <item name="colorControlActivated">@color/segundo</item>
        <item name="color">@color/segundo</item>
        <item name="colorSecondary">@color/primero</item>
        <item name="android:textColorPrimary">@color/primero</item>
        <item name="android:textColorSecondary">@color/segundo</item>
    </style>

    <!-- Personalizar fuente en la vista del selector -->
    <style name="biotif">
        <item name="android:fontFamily">@ont/biotif_regular</item>
    </style>

    <style name="PopupMenuStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorSecondary">@color/primero</item>
    </style>

    <style name="Theme.AsistenteDeProfesores.Fullscreen" parent="Theme.AsistenteDeProfesores">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.AsistenteDeProfesores.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.AsistenteDeProfesores.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="NoteDialog" parent="android:Theme.Material.Dialog.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- no background, titles or window float -->
        <item name="android:windowBackground">@color/primero</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/primero</item>
        <item name="colorPrimaryDark">@color/segundo</item>
        <item name="android:statusBarColor">@color/quinto</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>