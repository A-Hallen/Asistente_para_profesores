<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/tercero"
    android:theme="@style/ThemeOverlay.AsistenteDeProfesores.FullscreenContainer"
    tools:context=".ui.view.fragments.WelcomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/ic_horario_top"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/horarioHeader"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/white_dream"
                    android:gravity="center"
                    android:text="Horario"
                    android:textColor="@color/black"
                    android:textSize="35sp"
                    android:textStyle="bold" />
                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>
            </LinearLayout>
        </FrameLayout>
        <TextView
            android:text="Agrega turnos de clase al horario"
            android:gravity="center"
            android:layout_marginVertical="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/biotif_medium"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <ImageView
        android:layout_weight="1"
        android:layout_marginHorizontal="60dp"
        android:gravity="center"
        android:backgroundTint="@color/decimo"
        android:background="@drawable/ask_key_dialog_bg"
        android:src="@drawable/horario_preview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="200dp">
        <ImageView
            android:background="@drawable/welcome_progress"
            android:layout_margin="10dp"
            android:layout_width="15dp"
            android:layout_height="15dp"/>
        <ImageView
            android:background="@drawable/welcome_progress"
            android:backgroundTint="@color/primero"
            android:layout_margin="10dp"
            android:layout_width="15dp"
            android:layout_height="15dp"/>
        <ImageView
            android:background="@drawable/welcome_progress"
            android:layout_margin="10dp"
            android:layout_width="15dp"
            android:layout_height="15dp"/>
        <ImageView
            android:background="@drawable/welcome_progress"
            android:layout_margin="10dp"
            android:layout_width="15dp"
            android:layout_height="15dp"/>
    </LinearLayout>

</LinearLayout>