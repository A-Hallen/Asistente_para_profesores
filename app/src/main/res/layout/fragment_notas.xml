<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.fragments.FragmentNotas"
    tools:background="@color/white"
    >
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notas_recycler_view"
        android:background="@color/cuarto"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/notasPreview"
        android:visibility="gone"
        tools:visibility="gone"
        android:background="@color/tercero"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/ic_notas_top"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>
                <TextView
                    android:id="@+id/notasHeader"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/white_dream"
                    android:gravity="center"
                    android:text="Notas"
                    android:textColor="@color/black"
                    android:textSize="35sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>
        <TextView
            android:text="Crea notas y apuntes para verlos\n mÃ¡s tarde"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/biotif_medium"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_weight="10"
            android:src="@drawable/notas_preview"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginBottom="80dp"
            android:layout_marginHorizontal="60dp"
            android:backgroundTint="@color/decimo"
            android:background="@drawable/ask_key_dialog_bg"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <Space
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/new_note"
        android:elevation="10dp"
        android:layout_margin="16dp"
        android:background="@drawable/ic_new_note"
        android:layout_gravity="end|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/nueva_nota" />
</FrameLayout>