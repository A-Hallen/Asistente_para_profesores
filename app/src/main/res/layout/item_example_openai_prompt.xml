<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    android:elevation="0dp"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="10dp"
    android:layout_width="match_parent"
    android:layout_height="100dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <ImageView
                    android:id="@+id/promptExampleIcon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:backgroundTint="@color/primero"
                    tools:background="@drawable/openai_microscopio" />

                <TextView
                    android:id="@+id/promptExampleHeader"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_toEndOf="@id/promptExampleIcon"
                    android:fontFamily="@font/biotif_bold"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    tools:text="Some prompt,his is some promptSome prompt, this is some prompt" />

                <TextView
                    android:id="@+id/promptExampleText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/promptExampleHeader"
                    android:layout_toEndOf="@id/promptExampleIcon"
                    android:fontFamily="@font/biotif_regular"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    tools:text="Some prompt promptExampleIcon promptExampleIcon promptExampleIcon" />
        </RelativeLayout>
</androidx.cardview.widget.CardView>
