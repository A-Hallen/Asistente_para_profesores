<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tercero"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AsistenteDeProfesores.FullscreenContainer"
    tools:context=".ui.view.fragments.WelcomeFragment">
    <TextView
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:text="@string/welcome"
        android:gravity="center_vertical"
        android:paddingStart="40dp"
        android:paddingEnd="0dp"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/welcome_top"/>
    <ImageView
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:src="@drawable/welcome"/>
        <LinearLayout
            android:layout_gravity="center_horizontal|bottom"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="200dp">
            <ImageView
                android:background="@drawable/welcome_progress"
                android:backgroundTint="@color/primero"
                android:layout_margin="10dp"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
            <ImageView
                android:background="@drawable/welcome_progress"
                android:layout_margin="10dp"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
            <ImageView
                android:background="@drawable/welcome_progress"
                android:layout_margin="10dp"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
            <ImageView
                android:background="@drawable/welcome_progress"
                android:layout_margin="10dp"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
        </LinearLayout>
</LinearLayout>